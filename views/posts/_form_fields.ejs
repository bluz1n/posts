<div class="form-group">
  <input required  value="<%= post.title %>"type="text" name="title" id="title" class="input-text" placeholder="Title">
</div>

<div class="form-group">
  <textarea required name="description" id="description" class="desc-text" placeholder="Description"><%= post.description %></textarea>
</div>

<div class="form-group">
  <textarea required name="markdown" id="markdown" class="mark-text" placeholder="Markdown"><%= post.markdown %></textarea>
</div>

<a href="/" class="button-cancel">CANCEL</a>
<button type="submit" class="button-submit">Save</button>
